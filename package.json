{
  "name": "faster-translate",
  "version": "1.0.0",
  "type": "module",
  "description": "Quick and simple text translation Firefox extension",
  "scripts": {
    "dev": "npm run check && webpack --watch --config webpack.config.dev.js",
    "build": "npm run check && webpack --config webpack.config.prod.js",
    "clean": "rm -rf dist dev",
    "lint": "eslint src/**/*.{js,jsx}",
    "format": "prettier --write src/**/*.{js,jsx,css,html}",
    "check": "node scripts/check-structure.js"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-env": "^7.22.20",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "webpack": "^5.97.0",
    "webpack-cli": "^5.1.4",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5"
  }
} 