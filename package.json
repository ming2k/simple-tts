{
  "name": "faster-translate",
  "version": "1.0.0",
  "type": "module",
  "description": "Quick and simple text translation Firefox extension",
  "scripts": {
    "dev": "webpack --watch --config webpack.config.dev.js",
    "build": "webpack --config webpack.config.prod.js",
    "clean": "rm -rf dist dev",
    "lint": "eslint src/**/*.{js,jsx}",
    "format": "prettier --write src/**/*.{js,jsx,css,html}",
    "build:firefox": "BROWSER=firefox webpack --config webpack.config.dist.js",
    "build:chrome": "BROWSER=chrome webpack --config webpack.config.dist.js"
  },
  "dependencies": {
    "loglevel": "^1.9.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "style-loader": "^3.3.3",
    "webpack": "^5.97.0",
    "webpack-cli": "^5.1.4"
  }
}
