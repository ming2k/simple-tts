{
  "name": "simple-tts",
  "version": "4.0.0",
  "type": "module",
  "description": "A simple browser extension for text-to-speech using Azure's API.",
  "scripts": {
    "dev": "cross-env BROWSERS=firefox,chrome webpack --watch --config webpack.config.dev.js",
    "dev:firefox": "cross-env BROWSERS=firefox webpack --watch --config webpack.config.dev.js",
    "dev:chrome": "cross-env BROWSERS=chrome webpack --watch --config webpack.config.dev.js",
    "build": "cross-env BROWSERS=firefox,chrome webpack --config webpack.config.dist.js",
    "build:firefox": "npm run clean:firefox && cross-env BROWSERS=firefox webpack --config webpack.config.dist.js",
    "build:chrome": "npm run clean:chrome && cross-env BROWSERS=chrome webpack --config webpack.config.dist.js",
    "clean": "rm -rf dist dev",
    "clean:firefox": "rm -rf dist/firefox dev/firefox",
    "clean:chrome": "rm -rf dist/chrome dev/chrome",
    "lint": "eslint src/**/*.{js,jsx}",
    "format": "prettier --write src/**/*.{js,jsx,css,html}",
    "zip": "npm run zip:chrome && npm run zip:firefox",
    "zip:chrome": "cd dist/chrome && zip -r ../../simple-tts-chrome.zip .",
    "zip:firefox": "cd dist/firefox && zip -r ../../simple-tts-firefox.zip .",
    "package": "npm run build && npm run zip",
    "package:chrome": "npm run build:chrome && npm run zip:chrome",
    "package:firefox": "npm run build:firefox && npm run zip:firefox",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "loglevel": "^1.9.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-feather": "^2.0.10",
    "styled-components": "^6.1.13",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
    "@eslint/js": "^9.34.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "babel-loader": "^9.1.3",
    "babel-plugin-styled-components": "^2.1.4",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "dotenv": "^16.4.7",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.10",
    "webpack": "^5.97.0",
    "webpack-cli": "^5.1.4"
  }
}
